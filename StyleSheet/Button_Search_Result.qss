QPushButton
{
    border: 3px transparent;
    background-color: transparent;
    font-size: 16px;
    padding: 10px;
}

QPushButton:hover
{
    border: 3px transparent;
    background-color: mintcream;
    color: blue;
    background-color:mintcream;
    font-size: 16px;
    padding: 10px;
}

QPushButton:pressed
{
    border: 3px solid green;
    background-color: mintcream;
    color: blue;
    background-color:mintcream;
    padding: 10px;
    font-size: 16px;
    border-style: inset;
}